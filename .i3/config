# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Conky
bar {
         position bottom
         status_command ~/.i3/conky.sh
}

# Take Screenshot
bindsym Print exec --no-startup-id "sleep 0.2; scrot -s ~/screenshot_%Y-%m-%d-%T.png"

# Lock
bindsym $mod+p exec --no-startup-id i3lock -t -e -I 900 -d -i ~/.backgrounds/defaultwallpaper.png

# Reboot and Shutdown
# 26/02/2016 - Kill chromium first as it does not shutdown
# gracefully on X11 close.
set $mode_system System (r) reboot, (s) shutdown
mode "$mode_system" {
	bindsym r exec --no-startup-id "killall chromium; systemctl reboot", mode "default"
	bindsym s exec --no-startup-id "killall chromium; systemctl poweroff -i", mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"

# Change Res (for games)
set $res_system (1) 2560x1440, (2) 1920x1080
mode "$res_system" {
	bindsym 1 exec --no-startup-id xrandr --output DVI-I-1 --mode 2560x1440, mode "default"
	bindsym 2 exec --no-startup-id xrandr --output DVI-I-1 --mode 1920x1080, mode "default"

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+End mode "$res_system"

